name: Random Test Workflow

on:
  push:
    branches: [ '*' ]
  pull_request:
    branches: [ '*' ]
  workflow_dispatch:

jobs:
  random-test:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Random Pass/Fail Test
        run: |
          echo "Running random test..."
          # Generate a random number between 0 and 1
          RANDOM_NUM=$((RANDOM % 2))
          
          if [ $RANDOM_NUM -eq 0 ]; then
            echo "✅ Test PASSED (random result)"
            exit 0
          else
            echo "❌ Test FAILED (random result)"
            exit 1
          fi
